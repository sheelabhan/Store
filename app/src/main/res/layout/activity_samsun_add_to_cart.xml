<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".cart.SamsungAddToCart">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/mobileee"
        android:id="@+id/addsamsung"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:hint="Name"
        android:textSize="20sp"
        android:id="@+id/namesamsungddtocart"
        android:layout_below="@+id/addsamsung"
        android:gravity="center"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locationsamsungaddtocart"
        android:hint="oppo"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:layout_below="@+id/namesamsungddtocart"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/costsamsungaddtocart"
        android:hint="20000"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:layout_below="@+id/locationsamsungaddtocart"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="match_parent"

        android:background="@drawable/button"
        android:layout_height="wrap_content"
        android:id="@+id/btnaddtocartsamsung"
        android:text="Add to Cart"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/costsamsungaddtocart"
        android:layout_marginTop="20dp"
        />


</RelativeLayout>